<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logoPink">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_kor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginTop="8dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/txt_name_kor_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="5"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="본죽 망우우림시장점"
                        android:textSize="18sp"/>

                        <RelativeLayout
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/img_search_like1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:visibility="gone"
                                android:src="@drawable/ic_baseline_star_24" />

                            <ImageView
                                android:id="@+id/img_search_like1_border"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_baseline_star_border_24" />

                        </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_call_kor_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="02-2207-6288" />

                <TextView
                    android:id="@+id/txt_add_kor_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="서울특별시 중랑구 망우동 403-69" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_kor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <TextView
                        android:id="@+id/txt_name_kor_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="한솥도시락"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_weight="5"/>
                    <ImageView
                        android:id="@+id/img_search_like2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_star_border_24"
                        android:layout_weight="1"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_call_kor_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="02-960-0325"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"/>
                <TextView
                    android:id="@+id/txt_add_kor_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서울특별시 동대문구 이문동 264-263"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_kor3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <TextView
                        android:id="@+id/txt_name_kor_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="은주네 반찬"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_weight="5"/>
                    <ImageView
                        android:id="@+id/img_search_like3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_star_border_24"
                        android:layout_weight="1"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_call_kor_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="070-7899-9713"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"/>
                <TextView
                    android:id="@+id/txt_add_kor_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서울특별시 동대문구 전농로 38길 12"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
